// backend/prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  HALL
  KITCHEN
}

enum EmploymentType {
  EMPLOYEE // 社員
  STUDENT // 学生
  PART // パート
  FREETER // フリーター
}

enum ShiftStatus {
  ASSIGNED // 確定
  REQUESTED // 申請
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role
  isForeign Boolean  @default(false)
  createdAt DateTime @default(now())

  // 追加属性
  employeeNumber String?         @unique
  passwordHash   String?
  isAdmin        Boolean         @default(false)
  employmentType EmploymentType?
  partTimeStart  DateTime?
  hourlyWage     Int?

  shifts Shift[]
}

model Shift {
  id        Int         @id @default(autoincrement())
  userId    Int
  role      Role
  start     DateTime
  end       DateTime
  createdAt DateTime    @default(now())
  status    ShiftStatus @default(ASSIGNED)

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, start, end])
  @@index([userId, start])
  @@index([start, end])
}
