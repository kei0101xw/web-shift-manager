datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  HALL
  KITCHEN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role
  isForeign Boolean  @default(false)
  createdAt DateTime @default(now())
  shifts    Shift[]
}

model Shift {
  id        Int      @id @default(autoincrement())
  userId    Int
  role      Role
  start     DateTime
  end       DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, start])
  @@index([start, end])
}
